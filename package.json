{
  "name": "jku-game_engine",
  "version": "1.0.0",
  "description": "Simple game engine with TypeScript, WebAssembly and WebGPU",
  "type": "module",
  "scripts": {
    "build": "npm run build:vite && npm run build:wasm",
    "build:vite": "tsc && vite build",
    "build:wasm": "zig build-exe src/core/game_engine.zig -target wasm32-freestanding -fno-entry -rdynamic -O ReleaseSmall && mv game_engine.wasm public/",
    "clean": "rm -f public/game_engine.wasm dist/game_engine.wasm",
    "dev": "vite",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "preview": "vite preview",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "typecheck": "tsc --noEmit",
    "test:zig": "zig test src/core/game_core_test.zig",
    "verify": "npm run typecheck && npm run lint && npm test && npm run test:zig"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitejs/plugin-basic-ssl": "^1.2.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3",
    "vite": "^5.1.0"
  },
  "dependencies": {
    "@webgpu/types": "^0.1.40"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "webassembly",
    "webgpu",
    "typescript",
    "game-engine",
    "physics",
    "zig"
  ],
  "author": "",
  "license": "MIT"
}
